@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
    Layout = "_Layout";
}

<h2 style="text-align: center; margin: auto; width: 150px;">Регистрация</h2>
<div class="bg-dark" style="margin: auto; width: 300px; text-align: center; border-radius: 10px; color: white;">
    
    <form asp-action="Register" asp-controller="Account" method="post">
        <div style="color: red;" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" />
                <br />
                <span style="color: red;" asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" />
                <br />
                <span style="color: red;" asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" />
                <br />
                <span style="color: red;" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <input type="submit" style="margin-top: 10px; margin-bottom: 10px;" value="Регистрация" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
