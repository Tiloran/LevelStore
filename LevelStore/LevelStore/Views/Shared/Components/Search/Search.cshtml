<script>
    function RunSearch(e, elemID) {
        if (e.keyCode === 13) {
            $("#" + elemID).click();
        }
    }
</script>

<div class="search-wrap">
    <form asp-controller="Product" asp-action="List" method="get">
        <input class="search-input" placeholder="Поиск..." id="SearchField" name="searchString" onkeydown="" onkeypress="RunSearch(event, 'SearchButton')" />
        <button id="SearchButton" class="search-btn" type="submit"><i class="fa fa-search"></i></button>
    </form>
</div>
