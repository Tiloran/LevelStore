@using Microsoft.AspNetCore.Http


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/mainStyles.css" />
    <link rel="stylesheet" href="/css/menuStyles.css" />
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/js/DropDownMenu.js"></script>
    @RenderSection("scripts", false)
</head>
<body >
    <header class="container-fluid">
        
        <div class="row bg-light">
            <div class=" col-md-3"></div>
            <div class="text-center col-md-6">
                <a asp-controller="Admin" asp-action="ListAdmin">
                    <img src="/images/img/global-content/logo.png" alt="level">
                </a>
            </div>
            <div class="col-md-3" style="margin-top: 5px;"></div>
        </div>
        
        <div class="row" style="margin-top: 30px;">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="width: 100%;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTilo" aria-controls="navbarTilo" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTilo">
                    @await Component.InvokeAsync("UserInfo")
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0" style="margin: 0 auto;">
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Аккаунты</a>
                            <ul class=" dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item " asp-controller="Account" asp-action="Register">Регистрация </a></li>
                                <li><a class="dropdown-item " asp-controller="Account" asp-action="Logout">Logout </a></li>
                                <li><a class="dropdown-item " asp-controller="Account" asp-action="Login">Login </a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="List">К юзерскому списку </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Admin" asp-action="ListAdmin">К админскому списку </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Admin" asp-action="Create">Добавить товар </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Admin" asp-action="AddColors">Добавить/Цвет </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Order" asp-action="ListOrder">Заявки </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Shares" asp-action="Index">Акции </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Admin" asp-action="ListPromo">Промо коды </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    
    <div class="container-fluid">
        @await Component.InvokeAsync("Categories")
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
