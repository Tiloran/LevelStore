<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8" />

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" asp-href-include="/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" asp-href-include="/css/MainMenuStyleSheet.css" />
    <script src="/js/jQuery/jquery.min.js"></script>
    <script src="/js/jsrender.min.js"></script>
    <script src="~/js/slick/slick.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/bootstrap-4/bootstrap.min.js"></script>



    @RenderSection("scripts", false)
</head>
<body>
    <header class="container-fluid desktop-header">
        <div class="row">
            <div class="col-md-2 main-logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/img/global-content/logo.png" alt="level">
                </a>
            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-9 text-right">
                        @await Component.InvokeAsync("Search")
                    </div>
                    <div class="col-md-3 text-right">
                        <div class="shopping-basket">
                            @await Component.InvokeAsync("CartSummary")
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 main-navigation text-center">
                        <ul class="menu">
                            <li class="menu__item"><a class="menu__item-link" asp-controller="Product" asp-action="List">Магазин</a></li>
                            <li class="menu__item"><a class="menu__item-link" asp-controller="DeliveryAndPayment" asp-action="Delivery">Доставка</a></li>
                            <li class="menu__item"><a class="menu__item-link" asp-controller="DeliveryAndPayment" asp-action="Payment">Оплата</a></li>
                            <li class="menu__item"><a class="menu__item-link" asp-controller="DeliveryAndPayment" asp-action="Guarantees">Гарантии</a></li>
                            <li class="menu__item"><a class="menu__item-link" asp-controller="Brand" asp-action="AboutTheBrand">О бренде</a></li>
                            <li class="menu__item">
                                <a href="#" class="menu__item-link nolink">Контакты</a>
                                <ul class="submenu">
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="OurShowRoom">Наш Showroom</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="DeliveryDepartment">Отдел доставки</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Bayer">Bayer</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Partnership">Партнерство</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Vacancy">Вакансии</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 main-navigation shop__navigation text-center">
                        <!-- |Вставити сюди меню магазина яке починається <ul class="menu shop__menu">-->
                    </div>
                </div>
            </div>
        </div>
    </header>

    <header class="mobile-header">
        <div>
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
                <!-- Brand -->
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/img/global-content/logo.png" alt="level">
                </a>
                <div class="navbar-brand shopping-basket">
                    @await Component.InvokeAsync("CartSummary")
                </div>
                <!-- Toggler/collapsibe Button -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <div id="accordion" class="mobile-header__accordion">
                        <div class="mobile-header__menu">
                            <div class="card-header mobile-header__menu-item" id="headingOne">
                                <button class="btn btn-link main-navigation menu__item-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    <a href="#">Магазин</a>
                                </button>
                            </div>
                        </div>
                        <div class="mobile-header__menu">
                            <div class="card-header mobile-header__menu-item" id="headingTwo">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    <a href="#">Доставка и оплата</a>
                                </button>
                            </div>
                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                                <ul class="submenu">
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="DeliveryAndPayment" asp-action="Delivery">Доставка</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="DeliveryAndPayment" asp-action="Payment">Оплата</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="DeliveryAndPayment" asp-action="Guarantees">Гарантии</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="mobile-header__menu">
                            <div class="card-header mobile-header__menu-item" id="headingThree">
                                <a class="menu__item-link" asp-controller="Brand" asp-action="AboutTheBrand">О бренде</a>
                            </div>
                        </div>
                        <div class="mobile-header__menu">
                            <div class="card-header mobile-header__menu-item" id="headingFour">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
                                    <a href="#">Контакты</a>
                                </button>
                            </div>
                            <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordion">
                                <ul class="submenu">
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="OurShowRoom">Наш Showroom</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="DeliveryDepartment">Отдел доставки</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Bayer">Bayer</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Partnership">Партнерство</a></li>
                                    <li class="submenu__item"><a class="submenu__item-link" asp-controller="Contact" asp-action="Vacancy">Вакансии</a></li>
                                </ul>
                            </div>
                        </div>
                        <form class="form-inline search-form__mobile" action="">
                            <input class="form-control search-form__mobile--input" type="text" placeholder="Поиск...">
                            <button class="btn btn-success search-form__mobile--btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </header>



    <div id="breadCrumb">
        <breadcrumb asp-homepage-title="Главная страница"
                    asp-homepage-url="@Url.Action("Index", "Home", values: new {area = ""})"
                    asp-homepage-glyphicon="fa fa-angle-double-up">
        </breadcrumb>
    </div>


    @RenderBody()


    <footer>
        <div class="container-fluid">
            <div class="row text-center">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-6 email">
                            <p class="footer-subheader">e-mail:</p>
                            <p>level.pochta@gmail.com</p>
                        </div>
                        <div class="col-sm-6 social">
                            <p class="footer-subheader">соц. сети:</p>
                            <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-sm-6 address">
                            <p class="footer-subheader">адрес:</p>
                            <p><span>г. Киев, ул. Ивана Кудри №5 оф. 223</span></p>
                            <p><span>График работы:</span></p>
                            <p><span>вт-сб: 12:00-20:00</span></p>
                            <p><span>вс-пн: выходные</span></p>
                        </div>
                        <div class="col-sm-6 phone">
                            <p class="footer-subheader">телефон:</p>
                            <p><span>(096) 399 08 56</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
