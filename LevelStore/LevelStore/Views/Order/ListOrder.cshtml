@model IEnumerable<Order>
@{
    ViewData["Title"] = "ListOrder";
    Layout = "_Layout";
}

<h2>ListOrder</h2>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Продукт</th>
            <th colspan="2">Детали</th>
            <th></th>
        </tr>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.FirstName</td>
                <td>@o.Phone</td>
                <th>Product</th>
                <th>Quantity</th>
                @if (o.Shipped == false)
                {
                    <td>Не отправлено</td>
                    <td>
                        <form asp-action="MarkShipped" method="post">
                            <input type="hidden" name="orderID" value="@o.OrderID"/>
                            <button type="submit" class="btn btn-sm btn-danger">Отправить</button>
                        </form>
                    </td>
                }
                else
                {
                    <td>Отправлено</td>
                }
            </tr>
            foreach (var line in o.Lines)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                    <td></td>
                </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">Заявок нету</div>
}