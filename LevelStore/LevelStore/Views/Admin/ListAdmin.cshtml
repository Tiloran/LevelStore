@model ProductsListViewModel
@{
    ViewData["Title"] = "ListAdmin";
    Layout = "_Layout";
}
<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/ShowSecondOnMouseOver.js"></script>

