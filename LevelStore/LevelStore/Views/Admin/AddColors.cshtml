@model TypeColor
@{
    ViewData["Title"] = "AddColors";
    Layout = "_LayoutAdmin";
    var colorList = TempData["ColorList"] as List<TypeColor> ?? new List<TypeColor>();
}


@foreach (var type in colorList)
{
    <label>@type.ColorType</label>
    <a asp-controller="Admin" asp-action="RemoveColor" asp-route-typeColorId="@type.TypeColorID">Удалить</a>
}

<form asp-action="AddColors" method="post">
    <input asp-for="ColorType"/>
    <button type="submit">Добавить</button>
</form>
<a asp-controller="Admin" asp-action="ListAdmin">Назад</a>
