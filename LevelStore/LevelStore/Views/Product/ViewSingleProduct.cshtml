@model Product
@{
    ViewData["Title"] = "ViewSingleProduct";
    Layout = "_Layout";
}

<div>@Model.Name</div>
<div>@Model.Price</div>
<div>@Model.Description</div>
<div>@Model.Category</div>
@if (Model.Images.Count > 0)
{
    foreach (var image in Model.Images)
    {
        <img src="/images/@image.Name" style="width: 100px; height: 100px;" alt="@image.Alternative">
    }
}
else
{
        <img src="/images/none.png" style="width: 100px; height: 100px;" alt="none image">
}
<a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.ProductID" class="btn btn-default">Добавить в корзину</a>
<a asp-controller="Product" asp-action="List" class="btn btn-default">К списку</a>
