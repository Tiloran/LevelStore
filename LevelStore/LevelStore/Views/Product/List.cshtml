@model ProductsListViewModel
@{
    ViewData["Title"] = "List";
    Layout = "_Layout";
}

@foreach (Product product in Model.Product)
{
    <div>
        <span>@product.Name</span>
        <span>@product.Price</span>
        <div>@product.Description</div>
        <a class="btn btn-primary">Выбрать</a>
    </div>
}

<a asp-controller="Admin" asp-action="Create" class="btn btn-default">Create</a>

